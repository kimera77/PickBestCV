
/**
 * @file Firebase Security Rules for CV Match Pro - DEVELOPMENT VERSION
 * 
 * ⚠️ Solo para desarrollo local con emulador
 * 
 * Estas reglas son casi idénticas a producción, pero ligeramente más permisivas
 * para facilitar desarrollo y testing. La principal diferencia es que permiten
 * operaciones sin userId en algunos casos para testing.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isDocOwner() {
      return request.auth.uid == resource.data.userId;
    }

    function willBeDocOwner() {
      return request.auth.uid == request.resource.data.userId;
    }

    // User documents
    match /users/{userId} {
      allow read, write: if isSignedIn() && isOwner(userId);
      allow list: if false;
      
      match /cvs/{cvId} {
        allow read, write: if isSignedIn() && isOwner(userId);
      }

      match /analysisResults/{analysisResultId} {
        allow read, write: if isSignedIn() && isOwner(userId);
      }
    }

    // Job Position Templates - Same as production
    match /jobPositionTemplates/{templateId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && willBeDocOwner();
      allow update: if isSignedIn() && isDocOwner() && willBeDocOwner();
      allow delete: if isSignedIn() && isDocOwner() && resource.data.userId != 'default';
      allow list: if isSignedIn();
    }

    // CV Analyses
    match /cvAnalyses/{analysisId} {
      allow read: if isSignedIn() && isDocOwner();
      allow create: if isSignedIn() && willBeDocOwner();
      allow update, delete: if isSignedIn() && isDocOwner();
    }
  }
}
