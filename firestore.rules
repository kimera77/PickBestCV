/**
 * @file Firebase Security Rules for CV Match Pro.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model.  Each user can only access their own data. All data is nested under /users/{userId}.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profiles.
 * - /users/{userId}/jobPositionTemplates/{jobPositionTemplateId}: Stores job position templates created by users.
 * - /users/{userId}/cvs/{cvId}: Stores CVs uploaded by users.
 * - /users/{userId}/analysisResults/{analysisResultId}: Stores analysis results.
 *
 * Key Security Decisions:
 * - Users can only access their own data.
 * - Listing all users is disallowed.
 * - Data validation is relaxed during this prototyping phase to allow for rapid schema iteration.
 *
 * Denormalization for Authorization:
 * - User ownership is enforced by requiring the `userId` in the document path to match the authenticated user's `uid`.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Enforces access control for user profiles. Only the authenticated user can read or write their own profile.
     * @path /users/{userId}
     * @allow (create) - An authenticated user can create their profile if the userId matches their auth UID.
     * @allow (get, update, delete) - An authenticated user can get, update, or delete their profile if the userId matches their auth UID.
     * @deny (create) - If the userId doesn't match the auth UID.
     * @deny (get, update, delete) - If the userId doesn't match the auth UID.
     * @deny (list) - Listing all users is not allowed.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Enforces access control for job position templates. Only the owner user can read, write, or delete their own job position templates.
     * @path /users/{userId}/jobPositionTemplates/{jobPositionTemplateId}
     * @allow (create) - An authenticated user can create a job position template under their user ID.
     * @allow (get, update, delete) - An authenticated user can get, update, or delete their own job position templates.
     * @deny (create) - If the userId doesn't match the auth UID.
     * @deny (get, update, delete) - If the userId doesn't match the auth UID.
     * @deny (list) - Listing job position templates is allowed only for the owner.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/jobPositionTemplates/{jobPositionTemplateId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

       function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Enforces access control for CVs. Only the owner user can read, write, or delete their own CVs.
     * @path /users/{userId}/cvs/{cvId}
     * @allow (create) - An authenticated user can create a CV under their user ID.
     * @allow (get, update, delete) - An authenticated user can get, update, or delete their own CVs.
     * @deny (create) - If the userId doesn't match the auth UID.
     * @deny (get, update, delete) - If the userId doesn't match the auth UID.
     * @deny (list) - Listing CVs is allowed only for the owner.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/cvs/{cvId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }


      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Enforces access control for analysis results. Only the owner user can read, write, or delete their own analysis results.
     * @path /users/{userId}/analysisResults/{analysisResultId}
     * @allow (create) - An authenticated user can create an analysis result under their user ID.
     * @allow (get, update, delete) - An authenticated user can get, update, or delete their own analysis results.
     * @deny (create) - If the userId doesn't match the auth UID.
     * @deny (get, update, delete) - If the userId doesn't match the auth UID.
     * @deny (list) - Listing analysis results is allowed only for the owner.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/analysisResults/{analysisResultId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }
  }
}